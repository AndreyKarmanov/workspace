modmap:
  - name: remappingCaps
    remap:
      CapsLock: SUPER_R
keymap:
  - name: arrows
    remap:
      SUPER_R-i: up
      SUPER_R-k: down
      SUPER_R-l: right
      SUPER_R-j: left
      SUPER_R-o: NEXTSONG
      SUPER_R-u: PREVIOUSSONG
      SUPER_R-p: PLAYPAUSE


